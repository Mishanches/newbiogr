<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.nb.mish.nbiografy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.WebViewActivity" />
        <activity android:name=".ui.PlayersListActivity"
            android:configChanges="orientation"/> <!-- сами будем обраб. изменение ориентации -->
        <activity android:name=".ui.CoachsListActivity" />
        <activity android:name=".ui.PlayerDetailActivity" />
        <activity android:name=".ui.FullImageActivity" />
        <activity
            android:name=".onboarding.CustomIntro"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme"/>

        </application>

</manifest>